@using AppleUsed.Web.Views.Manage
@model AppleUsed.Web.Models.ViewModels.ServicesViewModels.ServicesIndexViewModel
@{
    Layout = "/Views/Manage/_Layout.cshtml";
    ViewData["Title"] = "Услуги по продвижению объявлений";
    ViewData.AddActivePage(ManageNavPages.Services);
}

<div class="col-lg-12">

    <h4>@ViewData["Title"]</h4>

    @await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

    <hr />

    <br />

    <div>

        @if (@Model.Services.Count() > 0)
        {
            @foreach (var item in Model.Services)
            {
                <div class="row">

                    <div class="col-lg-4">
                        <p><b>Название : </b>@item.Name</p>
                        <p>
                            <b>Стоимость : </b>@item.Cost <span class="glyphicon glyphicon-usd"></span>
                        </p>
                        <p>
                            <b>Время действия : </b> @item.DaysOfActiveService дней. <span class="glyphicon glyphicon-calendar"></span>
                        </p>
                    </div>

                    <div class="col-lg-8"><p><b>Описание : </b>@item.Description</p></div>

                    @if (Model.SelectedAdId > 0)
                    {
                        <div class="btn-group col-lg-offset-10">
                            <p>
                                <a asp-controller="ManagePurchases"
                                   asp-action="CreatePurchase"
                                   asp-route-adId="@Model.SelectedAdId"
                                   asp-route-serviceId="@item.ServicesId"
                                   class="btn btn-warning">Выбрать <span class="glyphicon glyphicon-plus"></span></a>
                            </p>
                        </div>
                    }

                </div>

                <hr />
            }
        }
        else
        {
            <h4>Нет ни одной созданой услуги</h4>
        }

    </div>

</div>