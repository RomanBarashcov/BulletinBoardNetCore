@using AppleUsed.Web.Views.Manage
@model List<AppleUsed.BLL.DTO.AdDTO>
@{
    ViewData["Title"] = "Мои объявления";
    ViewData.AddActivePage(ManageNavPages.MyAds);
}

<h4>@ViewData["Title"]</h4>

<div class="ad-list col-lg-12">

    @{ foreach (var item in Model)
        {

            <ul>
                <li>
                    <div class="row">

                        <div class="col-lg-3">
                            <a href="~/Ad/AdDetails/@item.AdId">
                                <img style='width:170px; height:130px;' src="@item.PhotosList.FirstOrDefault()" />
                            </a>
                        </div>

                        <div class="col-lg-9">

                            <div>
                                <span>
                                    @Html.ActionLink(item.Title, "AdDetails", "Ad", new { id = @item.AdId }, new { @class = "ad-title-text" })
                                </span>
                            </div>

                            <div class="ad-price-text">
                                <span>
                                    <b>@item.Price  .грн</b>
                                </span>
                            </div>

                            <div class="location">
                                <span>г. Киев</span>
                            </div>

                            <div class="last-modifaed">
                                <span>@item.DateUpdated</span>
                            </div>

                            <div class="ad-description">
                                @if (item.Description.Length < 100)
                                {
                                    <span>@item.Description.Substring(0, item.Description.Length) ..</span>
                                }
                                else
                                {
                                    <span>@item.Description.Substring(0, 100) ..</span>
                                }
                            </div>

                            <div class="btn-block">
                                <button class="btn btn-success" type="button">
                                    Сообщения <span class="badge">1</span>
                                </button>
                                @Html.ActionLink("Редактировать", "EditAd", "Manage", new { @id = item.AdId }, new { @class= "btn btn-defaul" })
                                <a class="btn btn-danger">Деактивировать</a>
                            </div>

                        </div>
                    </div>
                </li>
            </ul>

            <hr />

        }

    }

</div>