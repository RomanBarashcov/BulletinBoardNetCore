@using AppleUsed.DAL.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="ManageAd" asp-action="Index">Мой Профиль <span class="glyphicon glyphicon-user"></span></a>
            </li>
            <li>
                <a href="#" onclick="Logout()">Выйти  <span class="glyphicon glyphicon-log-out"></span></a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="" asp-controller="Account" asp-action="Register">Личний кабинет</a></li>*@
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Вход <span class="glyphicon glyphicon-log-in"></span></a></li>
    </ul>
}

<script>

    function Logout() {
        $('#logoutForm').submit();
    }

</script>