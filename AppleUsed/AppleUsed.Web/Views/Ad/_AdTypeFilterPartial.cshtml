
@model AppleUsed.Web.Models.ViewModels.AdViewModels.AdIndexViewModel

<div class="ad-list col-sm-9">


    <h3>Новые объявления</h3>

    <div class="row">

        <div class="col-lg-3">
            <div class="btn-group" role="group" aria-label="...">

                @using (Html.BeginForm("Index", "Ad", FormMethod.Get, new { @id = "All" }))
                {
                    <input type="hidden" name="adType" value="Все" id="ValueForFilteringByAdType" />
                    <button type="submit" class="btn btn-default">Все</button>
                }
                @using (Html.BeginForm("Index", "Ad", FormMethod.Get, new { @id = "Used" }))
                {
                    <input type="hidden" name="adType" value="Б/У" id="ValueForFilteringByAdType" />
                    <button type="submit" class="btn btn-default">Б/У</button>
                }
                @using (Html.BeginForm("Index", "Ad", FormMethod.Get, new { @id = "New" }))
                {
                    <input type="hidden" name="adType" value="Новые" id="ValueForFilteringByAdType" />
                    <button type="submit" class="btn btn-default">Новые</button>
                }
            </div>
        </div>
        <div class="col-lg-6"></div>
        <div class="col-lg-3">
            <select class="form-control">

                <option disabled="disabled" value="datePublishStart,desc" selected="selected">Сортировка</option>
                <option value="datePublishStart,desc">По дате (новые - старые)</option>
                <option value="datePublishStart,asc">По дате (старые - новые)</option>
                <option value="price.amount,asc">По цене (дешевле - дороже)</option>
                <option value="price.amount,desc">По цене (дороже - дешевле)</option>
                <option value="counter,desc">По популярности</option>

            </select>
        </div>

    </div>

    <hr />
</div>
