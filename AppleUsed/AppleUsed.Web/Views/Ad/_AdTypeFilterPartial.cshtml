
@model AppleUsed.Web.Models.ViewModels.AdViewModels.AdIndexViewModel

<div class="ad-list col-sm-12">

    <div class="row">

        <div class="col-lg-3">
            <input type="hidden" name="productState" id="FilteringValue" />
            <div class="btn-group" role="group">

                <button onclick="FilteringByAllProducts()" class="btn btn-default" id="All">Все</button>
                <button onclick="FilteringByUsedProducts()" class="btn btn-default" id="Used">Б/У</button>
                <button onclick="FilteringByNewProducts()" class="btn btn-default" id="New">Новые</button>

            </div>
        </div>

        <div class="col-lg-3 col-lg-offset-6">

            <input type="hidden" asp-for="SortViewModel.SortOptionList" />

            <select asp-for="SortViewModel.SelectedOptionValue" asp-items="Model.SortViewModel.SortOptionList" id="option" onchange="SelectedOptionChanged()" class="form-control">
                <option disabled="disabled" value="0" selected="selected">Сортировка</option>
            </select>

        </div>

    </div>
</div>

<script type="text/javascript">

    let All = "Все";
    let Used = "Б/У";
    let New = "Новые";

    @*$(document).ready(function () {


        let selectedNavVal = @Model.SelectedProductState

        switch (selectedNavVal) {
            case All:
                $('#All').addClass('active');
                break;
            case Used:
                $('#Used').addClass('active');
                break;
            case New:
                $('#New').addClass('active');
                break;
            default:
                break;

        }
    });*@

    function FilteringByAllProducts() {
        $('#page').val("");
        $('#FilteringValue').val(All);
        $.get("/Index", { model: @Model });

    }

    function FilteringByUsedProducts() {

        $('#page').val("");
        $('#FilteringValue').val(Used);
        $.get("/Index", { model: @Model });

    }

    function FilteringByNewProducts() {

        $('#page').val("");
        $('#FilteringValue').val(New);
        $.get("/Index", { model: @Model });

    }

    function SelectedOptionChanged() {

        $('#page').val("");
        $('#Filtering').submit();

    }



</script>